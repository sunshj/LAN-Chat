{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"]
    },
    "outDir": "./dist"
  },
  "include": [
    "src/preload/index.d.ts",
    "src/renderer/types/*.d.ts",
    "src/renderer/src/**/*.vue",
    "src/renderer/src/**/*.ts"
  ]
}
